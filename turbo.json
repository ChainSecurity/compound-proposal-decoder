{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env", "tsconfig.base.json"],
  "globalEnv": [
    "ETH_RPC_URL", "OP_RPC_URL", "POLYGON_RPC_URL", "BASE_RPC_URL",
    "ARB_RPC_URL", "LINEA_RPC_URL", "SCROLL_RPC_URL", "ETHERSCAN_API_KEY",
    "TENDERLY_RPC_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": { "cache": false, "persistent": true },
    "lint": { "dependsOn": ["^build"], "outputs": [] },
    "typecheck": { "dependsOn": ["^build"], "outputs": [] },
    "decode": { "cache": false },
    "clean": { "cache": false },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
